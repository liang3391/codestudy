<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/header_bg">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"

            android:src="@drawable/list" />
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/head1" />

    </LinearLayout>


    <!--第二部分-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="#01b2ac"
        android:orientation="horizontal"
         >

            <ImageView
                android:id="@+id/my_sqd"
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_weight="1"
                android:src="@drawable/index_sqd"/>
            <TextView
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:layout_marginLeft= "88dp"
                android:text="我的申请单"
                android:textColor="#ffffff"
                />
                    <ImageView
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                        android:gravity="center"
                android:src="@drawable/index_db"/>
            <TextView
                android:id="@+id/my_dclsx"
                android:layout_width="55dp"
                android:layout_height="50dp"

                android:text="待处理事项"
                android:textColor="#ffffff"
                />
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff">
            <!--第三部分-->
            <!--广告单-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="208dp"
                android:layout_weight="1"
                android:src="@drawable/index_gg"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#FFFFFF"
                android:text="广告单"
               />
            <!--报销单-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/index_bx"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#FFFFFF"
                android:text="报销单"
                />
            <!--请假单-->
            <ImageView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:src="@drawable/index_qj"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#FFFFFF"/>
            <!--出差单-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#FFFFFF"/>
            <!--误打卡-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#FFFFFF" />
            <!--邮件-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#FFFFFF" />
        </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#f8f8f8">
            <!-- 底部-->
            <!--首页-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/home"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#FFFFFF"
                android:layout_weight="1"
                android:text="首页"/>
            <!--通讯录-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/mail"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:text="通讯录" />
            <!--讨论区-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/talk"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:text="讨论区"/>
        </LinearLayout>

</LinearLayout>





<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    android:orientation="vertical"
    android:background="@drawable/login_bg"
    android:paddingLeft="27dp"
    android:paddingRight="27dp">

    <!-- 圆形图片 -->

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:src="@drawable/login_logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        />
    <!-- 文字图片，系统没有这种字体 -->

    <ImageView
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:src="@drawable/login_font" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:background="#01B2AC"
        android:orientation="horizontal"
        android:padding="1dp" >

        <ImageView
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:src="@drawable/login_admin"
            android:background="#01B2AC" />

        <EditText
            android:id="@+id/login_label_username"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_gravity="center_vertical"
            android:background="#FFFFFF"
            android:hint="账号"
            android:paddingLeft="15dp"
            android:textColor="#666"
            android:textColorHint="#CCCCCC"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="#01B2AC"
        android:orientation="horizontal"
        android:padding="1dp" >

        <ImageView
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:src="@drawable/login_mm"
            android:background="#01B2AC" />

        <EditText
            android:id="@+id/login_label_password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_gravity="center_vertical"
            android:background="#FFFFFF"
            android:hint="密码"
            android:paddingLeft="15dp"
            android:textColor="#666"
            android:textColorHint="#CCCCCC"
            android:textSize="12sp" />
    </LinearLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="13dp"
        android:layout_marginBottom="13dp"
        android:layout_marginTop="18dp"
        android:text="记住密码"
        android:id="@+id/chkItem"
        android:button="@drawable/selector_checkbox"
        android:checked="true"
        android:textColor="#FFFFFF"
        android:textSize="10sp" />

    <Button
        android:id="@+id/login_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#01B2AC"
        android:text="登陆 ERM"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold" />

</LinearLayout>